{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "*": [
                "node_modules/*"
            ]
        }
    },
    "exclude": ["node_modules", "dist"]
}